    "webpack-dev-server": "^2.9.3",
    "webpack-merge": "^4.1.0"
  },
  "scripts": {
    "client:prep": "gulp prepServer",
    "server:dev:prep": "babel src/server -d dist/server",
    "predev": "run-s client:prep server:dev:prep",
    "client:dev:transpile:watch": "watchify -vd -p browserify-hmr -e src/client/app.js -o dist/server/client/lib/app.js",
    "client:dev:html:watch": "gulp watchTemplates",
    "server:dev:babel:watch": "babel -w src/server -d dist/server",
    "server:dev:serve": "gulp nodemon",
    "client:dev:browser": "gulp startBrowser",
    "dev": "cross-env NODE_ENV=development run-p client:dev:transpile:watch client:dev:html:watch server:dev:babel:watch server:dev:serve client:dev:browser",
    "server:prod:prep": "gulp buildServer",
    "preprod": "run-s client:prep server:prod:prep",
    "prod": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o dist/server/client/style/app.css ] -e src/client/app.js | uglifyjs -c warnings=false -m > dist/server/client/lib/app.js",
    "lint": "eslint --format node_modules/eslint-friendly-formatter --color src .eslintrc.js webpack.config.babel.js --cache",
    "start": "nodemon --watch webpack.config.babel.js --exec \"webpack-dev-server --env development\"",
    "build": "webpack --env production"
  }
}
